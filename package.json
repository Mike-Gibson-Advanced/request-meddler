    "@types/koa-logger": "^2.0.2",
    "@types/koa-router": "^7.0.21",
    "@types/node": "^6.0.65",
    "@types/winston": "^2.3.3",
    "concurrently": "^3.5.0",
    "nodemon": "^1.12.1",
