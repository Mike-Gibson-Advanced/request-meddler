  "dependencies": {
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-logger": "^3.0.1",
    "koa-logger-winston": "^0.0.2",
    "koa-router": "^7.2.1",
    "rimraf": "^2.6.1",
    "winston": "^2.3.1"
  },
  "scripts": {
    "clean": "rimraf dist",
    "lint": "tslint --format verbose --project ./tsconfig.json --type-check \"src/**/*.ts\"",
    "compile": "echo Using TypeScript && tsc --version && tsc --pretty",
    "compile:watch": "yarn run compile -- --watch",
    "build": "yarn run clean && yarn run lint && yarn run compile",
    "build:watch": "yarn run lint && yarn run compile:watch",
    "debug:watch": "yarn run build && concurrently --kill-others \"yarn run build:watch\" \"nodemon --inspect=0.0.0.0:9229 dist/server.js\"",
    "start": "node dist/server.js",
    "dev": "yarn run debug:watch"
  }
}
