{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "inlineSourceMap": true,
        "outDir": "./dist",
        "removeComments": true,
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ],
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "src/ui/app"
    ]
}
